{
  "name": "business",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "automaticValidation": false,
  "scope": {
    "include": [
      "owner",
      "category",
      "subCategory"
    ]
  },
  "properties": {
    "nameEn": {
      "type": "string",
      "required": true
    },
    "nameAr": {
      "type": "string",
      "required": true
    },
    "nameUnique": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "pending"
    },
    "description": {
      "type": "string"
    },
    "locationPoint": {
      "type": "geopoint"
    },
    "phone1" : {
      "type" : "string"
    },
    "phone2" : {
      "type" : "string"
    },
    "fax" : {
      "type" : "string"
    },
    "openingDays": {
      "type": [
        "number"
      ]
    },
    "openingDaysEnabled": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "user"
    },
    "category": {
      "type": "belongsTo",
      "model": "businessCategories"
    },
    "subCategory": {
      "type": "belongsTo",
      "model": "businessCategories"
    },
    "city": {
      "type": "belongsTo",
      "model": "cities"
    },
    "location": {
      "type": "belongsTo",
      "model": "locations"
    },
    "myProducts": {
      "type": "embedsMany",
      "model": "products",
      "property": "products",
      "options": {
        "validate": true,
        "persistent": true
      }
    },
    "picturesPhoto": {
      "type": "embedsMany",
      "model": "media",
      "property": "covers",
      "options": {
        "validate": false,
        "forceId": true,
        "validateAbsence ": true
      }
    }
  },
  "acls": [],
  "methods": {}
}
