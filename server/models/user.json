{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "replaceOnPUT": false,
    "strictObjectIDCoercion": true
  },
  "hidden": [
    "password",
    "resetPasswordExpires",
    "resetPasswordToken"
  ],
  "scope": {
    "include": [
      "role"
    ]
  },
  "properties": {
    "status": {
      "type": "string",
      "required": true,
      "default": "pending"
    },
    "birthDate": {
      "type": "date"
    },
    "imageProfile": {
      "type": "string"
    },
    "socialId": {
      "type": "string"
    },
    "typeLogIn": {
      "type": "string",
      "required": true,
      "default": "registration"
    },
    "phoneNumber": {
      "type": "string"
    },
    "gender": {
      "type": "string",
      "required": false
    },
    "fcmToken": {
      "type": "string"
    },
    "balance": {
      "type": "number",
      "required": true,
      "default": 0
    },
    "resetPasswordToken": {
      "type": "string"
    },
    "resetPasswordExpires": {
      "type": "date"
    },
    "expireAutomaticApprovePost": {
      "type": "date"
    },
    "countAutomaticApprovePost": {
      "type": "number",
      "default": "0"
    },
    "expireAutomaticApproveProduct": {
      "type": "date"
    },
    "countAutomaticApproveProduct": {
      "type": "number",
      "default": "0"
    },
    "expireAutomaticApproveBusiness": {
      "type": "date"
    },
    "countAutomaticApproveBusiness": {
      "type": "number",
      "default": "0"
    },
    "expireAutomaticApproveJob": {
      "type": "date"
    },
    "countAutomaticApproveJob": {
      "type": "number",
      "default": "0"
    },
    "failedLogin": {
      "type": "number",
      "default": "0"
    },
    "dateUnlockAccount": {
      "type": "date"
    },
    "creationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    }
  },
  "validations": [],
  "relations": {
    "faveoriteCategories": {
      "type": "referencesMany",
      "model": "postCategories"
    },
    "country": {
      "type": "belongsTo",
      "model": "countries",
      "foreignKey": "countryId"
    },
    "role": {
      "type": "belongsTo",
      "model": "role"
    },
    "CV": {
      "type": "hasOne",
      "model": "userCV",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "forgotPassword"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getResetPassword"
    }
  ],
  "methods": {}
}