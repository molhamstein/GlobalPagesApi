{
  "name": "notifications",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "message": {
      "type": "string",
      "required": true
    },
    "_type": {
      "type": "string",
      "required": true
    },
    "seen": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "clicked": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "data" : {
      "type" :"Object"
    },
    "creationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    }
  },
  "validations": [],
  "relations": {
    "recipient": {
      "type": "belongsTo",
      "model": "user"
    }
  },
  "acls": [],
  "methods": {

    "clear": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "req",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "clear all user notification ",
      "http": [
        {
          "path": "/clear",
          "verb": "put"
        }
      ]
    }
  }
}
