{
  "name": "notifications",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "message": {
      "type": "string",
      "required": true
    },
    "_type": {
      "type": "string",
      "required": true
    },
    "seen": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "data" : {
      "type" :"Object"
    },
    "creationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    }
  },
  "validations": [],
  "relations": {
    "recipient": {
      "type": "belongsTo",
      "model": "user"
    }
  },
  "acls": [],
  "methods": {}
}
