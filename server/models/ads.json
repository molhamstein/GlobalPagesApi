{
  "name": "ads",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "pending"
    },
    "image": "string",
    "video": "string",

    "viewsCount": {
      "type": "number",
      "required": true,
      "default": 0
    }
  },
  "scope": {
    "include": "owner"
  },
  "validations": [],
  "relations": {
    "owner" : {
      "type": "belongsTo",
      "model": "user"
    }
  },
  "acls": [],
  "methods": {}
}
